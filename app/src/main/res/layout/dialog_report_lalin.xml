<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/dialogbox_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_lalin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Title Lalin"
                    android:textSize="7pt"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <RelativeLayout
                        android:id="@+id/layout_nama_ruas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/head_nama_ruas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Ruas"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/txt_nama_ruas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:maxWidth="150dp"
                            android:text="Jakarta - Cikampek"
                            android:textAlignment="textEnd"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_nama_ruas">
                        <TextView
                            android:id="@+id/head_km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="KM"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <TextView
                            android:id="@+id/txt_km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="65+800"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_jalur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_km">
                        <TextView
                            android:id="@+id/head_jalur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Jalur"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <TextView
                            android:id="@+id/txt_jalur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="A"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_jalur">
                        <TextView
                            android:id="@+id/head_range_km_pekerjaan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Range Km Pekerjaan"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/txt_range_km_pekerjaan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="51+800 - 52+000"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_waktu_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_range">
                        <TextView
                            android:id="@+id/head_waktu_awal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Waktu Awal"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/txt_waktu_awal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="3 Des 2022 21:99"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_waktu_akhir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_waktu_awal">
                        <TextView
                            android:id="@+id/head_waktu_akhir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Waktu Akhir"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/txt_waktu_akhir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="3 Des 2022 23:00"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_jenis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_waktu_akhir">

                        <TextView
                            android:id="@+id/head_ket_jenis_kegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Jenis Pekerjaan"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/txt_ket_jenis_kegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:maxWidth="120dp"
                            android:text="Contra flow"
                            android:textAlignment="textEnd"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_arah_lajur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_jenis">
                        <TextView
                            android:id="@+id/head_arah_jalur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Arah Jalur"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <TextView
                            android:id="@+id/txt_arah_jalur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="Cawang"
                            android:textAlignment="textEnd"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/layout_arah_lajur">
                        <TextView
                            android:id="@+id/head_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Status"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:text="Dalam Proses"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/head_keterangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Keterangan"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_status"/>
                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/dark"
                        android:layout_marginVertical="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/head_keterangan"/>

                    <TextView
                        android:id="@+id/txt_keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="HATI-HATI di Dawuan KM 65 arah Cikampek, ada Lajur Keluar Contraflow di lajur 3"
                        android:textSize="@dimen/text_size_big"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <Button
                    android:id="@+id/btn_close"
                    android:backgroundTint="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Close"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logojm"/>

</RelativeLayout>