<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/set_empty_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Data CCTV Kosong"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/SHOW_ALL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <include layout="@layout/appbar_custom"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    app:backgroundTint="@android:color/transparent"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_baseline_arrow_back_ios_24"
                    app:iconGravity="top"
                    app:iconSize="24dp"
                    app:iconTint="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ruas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Segment"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/titleSegment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semua Segment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_bigs" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp">
                <ImageView
                    android:id="@+id/image_cctv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <ProgressBar
                    android:id="@+id/loadingIMG"
                    android:layout_centerInParent="true"
                    style="@android:style/Widget.Holo.Light.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/set_cctv_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CCTV OFF"
                    android:textSize="12pt"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    app:tint="@color/dark" />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM 00+400 | CAWANG - CILILITAN"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/text_size_big"/>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_segment"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:paddingBottom="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="false"
                    app:spanCount="2"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/custom_card_imagecctv"/>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>