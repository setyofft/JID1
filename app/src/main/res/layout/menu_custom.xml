<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/grid"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:rowCount="1"
    android:columnCount="4"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_stastik" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:textSize="11sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Dashboard Lalu Lintas"
            android:textAlignment="center"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/realtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bxs_timer"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Realtime Traffic"
            android:textAlignment="center"
            android:textSize="11sp"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/antrianGerbangbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bxs_traffic_barrier"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>

        <TextView

            android:textSize="11sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Antrian Gerbang"
            android:textAlignment="center"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lalinPerjambtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_time"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>

        <TextView

            android:textSize="11sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Lalin Per Jam"
            android:textAlignment="center"
            android:textColor="@color/blue" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gangguan"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="40dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_warning"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>
        <TextView

            android:textSize="11sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:text="Gangguan Lalin"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kinerja"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="40dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_kinerja"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="11sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:text="Kinerja Lalin"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/traffic"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="40dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_traffic"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="11sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:text="Traffic"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_more_horiz_24"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>

        <TextView

            android:textSize="11sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Lainnya"
            android:textAlignment="center"
            android:textColor="@color/blue" />
    </LinearLayout>

</GridLayout>