<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
            <TextView
                android:id="@+id/title_lokasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/interbold"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:text="Semarang - solo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Tipe Gangguan"
                android:fontFamily="@font/intermedium"/>

            <TextView
                android:id="@+id/tipeGangguan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interbold"
                android:textColor="@color/black"
                android:text="Kecelakaan"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <!-- KM -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">

                    <!-- Label KM -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:text="KM"/>

                    <!-- Text KM -->
                    <TextView
                        android:id="@+id/km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle"
                        android:backgroundTint="@color/dark80"
                        android:text="928+500"/>
                </LinearLayout>

                <!-- Jalur -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp">

                    <!-- Label Jalur -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:text="Jalur"/>

                    <!-- Text Jalur -->
                    <TextView
                        android:id="@+id/jalur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle"
                        android:backgroundTint="@color/dark80"
                        android:text="A"/>
                </LinearLayout>

                <!-- Area -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp">

                    <!-- Label Area -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:text="Lajur"/>

                    <!-- Text Area -->
                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle"
                        android:backgroundTint="@color/dark80"
                        android:text="Bahu"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu Awal"
                        android:textSize="10sp"
                        android:fontFamily="@font/intermedium"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/interlight"
                        android:text="2023-10-31 22:10"/>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/interbold"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:backgroundTint="@color/status_onProg"
                    android:text="Proses"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>