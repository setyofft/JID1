<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title_lokasi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interbold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Semarang - solo"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interbold"
                android:textColor="@color/dark"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="12sp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/status_onProgress"
                android:text="proses"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interlight"
                android:text="2023-10-31 22:10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interbold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/dark80"
                    android:text="928+500"/>
                <TextView
                    android:id="@+id/jalur"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/interbold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/dark80"
                    android:text="A"/>
                <TextView
                    android:id="@+id/area"
                    android:textSize="12sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/interbold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/dark80"
                    android:text="Bahu"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>