<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/table_gangguan"
        android:stretchColumns="*"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:background="@color/gray">
            <TextView android:text="Ruas"
                android:textAlignment="center"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="KM"
                android:textAlignment="center"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="Arah"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="Dampak"
                android:layout_marginHorizontal="15dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:visibility="gone"
            android:id="@+id/row_notfound"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/not_found"/>
                <TextView
                    android:id="@+id/ket_not_found"
                    android:text="Tidak Ada Gangguan Lalu Lintas"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>

    </TableLayout>
</LinearLayout>
