<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:background="@drawable/custom_list"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tab_gangguan"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/gray"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_vector"
        app:iconGravity="top"
        app:iconTint="@color/blue"
        app:elevation="0dp"
        android:minWidth="0dp"
        android:stateListAnimator="@null"
        android:padding="10dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        android:layout_weight="1"
        android:text="Gangguan\nLalu Lintas"
        android:textAllCaps="false"
        android:autoSizeTextType="uniform"

        android:autoSizeMinTextSize="7sp"
        android:autoSizeMaxTextSize="8.5sp"
        android:textColor="@color/blue"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tab_rekayasa"
        android:layout_marginHorizontal="5dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_directions"
        app:iconGravity="top"
        app:iconTint="@color/white"
        android:layout_weight="1"
        app:elevation="0dp"
        android:stateListAnimator="@null"
        android:elevation="0dp"
        android:paddingTop="10dp"
        android:text="Rekayasa\nLalu Lintas"
        android:textAllCaps="false"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="7sp"
        android:autoSizeMaxTextSize="8.5sp"
        android:textColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tab_pemeliharaan"
        android:layout_marginHorizontal="0dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="10dp"
        android:textAllCaps="false"
        android:paddingTop="10dp"
        app:icon="@drawable/ic_entypo_traffic_cone"
        app:iconGravity="top"
        app:iconTint="@color/white"
        android:stateListAnimator="@null"
        app:elevation="0dp"
        android:text="Pemeliharaan\nJalan Tol"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="7sp"
        android:autoSizeMaxTextSize="8.5sp"
        android:textColor="@color/white"/>
</LinearLayout>